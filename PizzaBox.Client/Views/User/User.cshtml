@{
    ViewData["Title"] = "Users Page";
}
@model PizzaBox.Client.Models.UserViewModel
<ul>
@foreach (var user in Model.Users)
{
    <li>
        @user 
        <form asp-controller="User" asp-action="select" method="get" >
        <button type="submit"  class="btn btn-primary"  value ="@user">select</button>
        </form>
        </li>
    
    <br>
}
</ul>
<form asp-controller="user" asp-action="post" method="POST">
@Html.AntiForgeryToken()
<input type="text" name="Name" id="Name">
<button type="submit" class="btn btn-primary">add user</button>
</form>