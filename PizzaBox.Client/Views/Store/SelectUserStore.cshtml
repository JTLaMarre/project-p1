@{
    ViewData["Title"] = "Choose a Store";
}

@model PizzaBox.Client.Models.OrderViewModel



<div class="row">
  <div class="col">
   <h1>@Model.User Choose a Store:</h1> 
  </div>
    <form asp-controller="Order" asp-action="get" method="GET">
  <div class="col">

@foreach (var item in Model.Stores)
{
<input type="radio"asp-for="Store" name="Store" value = "@item" id="@item" required>
<label >@item</label>
    }
    <input type="text" class ="d-none" asp-for="User" name ="User" value="@Model.User">
    <button type="submit" class="btn btn-primary">Submit Store Selection</button>
    </form>
  </div>
  